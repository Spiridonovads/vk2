// ПЕРЕМЕННЫЕ
primaryButtonColor = #FF7700 
paddingButtonMedium = 8px 12px 
maxWidthButtonMedium = 190px
minWidthButtonMedium = 112px 

primaryCounterColor = #2FB675
widthCounterSmall = 8px
heightCounterSmall = 8px 


// МИКСИНЫ ДЛЯ КНОПКИ
buttonStyle(color)
  position relative
  overflow hidden
  background color
  color white
  border none
  border-radius 10px
  cursor pointer
  transition transform 500ms cubic-bezier(0, -0.3, 0.5, 1.3)
  display flex
  justify-content center
  align-items: center
  gap 4px

buttonSize(padding minWidth maxWidth)
  padding padding
  min-width minWidth
  max-width maxWidth

contentButtonStyle()
  min-width 0 
  white-space nowrap
  overflow hidden
  text-overflow ellipsis


//Hovered button
buttonStyleHovered()
  transform scale(1.05)


//Pressed button
buttonStylePressed()
  transform scale(0.95)


//Focused button
buttonStyleFocused()
  outline 2px solid rgba(0, 153, 255, 1) 
  outline-offset 2px


//Disabled button
buttonStyleDisabled()
  opacity: 0.64
  cursor not-allowed
  transform none 


//Button animations
buttonAnimationWrapper()
  position absolute
  top 0
  left 0
  height 100%
  pointer-events none 

overlay(){
  width 100%
  animation: none
}

shimmer(){
  width calc(100% / 3)
  animation shimmer 1s linear infinite
  filter blur(6px)
  background linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.12) 50%, rgba(255, 255, 255, 0) 100%)
}

@keyframes overlay
  0%
    width 0%
    border-top-right-radius 50%
    border-bottom-right-radius 50%
  100%
    width 100%
    border-radius 10%

@keyframes shimmer
  0%
    transform translateX(-300%)
  100%
    transform translateX(300%)
  


//МИКСИНЫ ДЛЯ КАУНТЕРА
counterStyle(color)
  background color

counterSize(width height)
  width width
  height height

@keyframes counter {
  0% {
    opacity: 0.5;
    transform: scale(1);
  }
  50% {
    opacity: 0;
    transform: scale(3);
  }
  
  100% {
    opacity: 0;
    transform: scale(3);
  }
}

